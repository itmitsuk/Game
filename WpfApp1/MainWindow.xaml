            <Image Tag="coin" Source="coin.gif" Stretch="Fill" Height="41" Canvas.Left="243" Canvas.Top="591" Width="35"/>

            <Image Name="player" Source="player.jpg" Stretch="Fill" Canvas.Left="115" Canvas.Top="454" Height="70" Width="60" Focusable="True"/>

            <Image Name="key" Height="47" Canvas.Left="704" Source="key.jpg" Stretch="Fill" Canvas.Top="345" Width="90"/>

            <Image Name="door" Height="90" Canvas.Left="115" Source="door-closed.gif" Stretch="Fill" Canvas.Top="278" Width="60"/>

            <Label Name="txtScore" FontSize="22" FontWeight="ExtraBold" Content="Coins: 0"/>
            <Label Name="txtScore1" FontSize="22" FontWeight="ExtraBold" Content="bgleft: -" Canvas.Left="290"/>

            <Image Tag="platform" Height="62" Source="platform.jpg" Stretch="Fill" Canvas.Top="637" Width="144"/>
            <Image Tag="platform" Height="62" Canvas.Left="127" Source="platform.jpg" Stretch="Fill" Canvas.Top="637" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="309" Source="platform.jpg" Stretch="Fill" Canvas.Top="637" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="433" Source="platform.jpg" Stretch="Fill" Canvas.Top="527" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="29" Source="platform.jpg" Stretch="Fill" Canvas.Top="373" Width="280"/>
            <Image Tag="platform" Height="62" Canvas.Left="656" Source="platform.jpg" Stretch="Fill" Canvas.Top="397" Width="182"/>
            <Image Tag="coin" Source="coin.gif" Stretch="Fill" Height="41" Canvas.Left="290" Canvas.Top="591" Width="35"/>
        </Canvas>

    </Grid>
</Window>