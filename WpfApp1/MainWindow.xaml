<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Canvas Name="myCanvas" Focusable="True" KeyUp="KeyIsUp" KeyDown="KeyIsDown" >
            <Image Name="background" Height="480" Source="background.jpg" Stretch="Fill" Width="2000"/>
            
            <Image Tag="coin" Source="coin.gif" Stretch="Fill" Height="41" Canvas.Left="309" Canvas.Top="286" Width="35"/>
            
            <Image Name="player" Source="player.jpg" Stretch="Fill" Canvas.Left="129" Canvas.Top="266" Height="70" Width="60"/>

            <Image Name="key" Height="47" Canvas.Left="564" Source="key.jpg" Stretch="Fill" Canvas.Top="129" Width="90"/>
            
            <Image Name="door" Height="90" Canvas.Left="105" Source="door-closed.gif" Stretch="Fill" Canvas.Top="97" Width="60"/>
            
            <Label Name="txtScore" FontSize="22" FontWeight="ExtraBold" Content="Coins: 0"/>
            
            <Image Tag="platform" Height="62" Source="platform.jpg" Stretch="Fill" Canvas.Top="372" Width="127"/>
            <Image Tag="platform" Height="62" Canvas.Left="127" Source="platform.jpg" Stretch="Fill" Canvas.Top="372" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="309" Source="platform.jpg" Stretch="Fill" Canvas.Top="372" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="472" Source="platform.jpg" Stretch="Fill" Canvas.Top="286" Width="182"/>
            <Image Tag="platform" Height="62" Canvas.Left="45" Source="platform.jpg" Stretch="Fill" Canvas.Top="192" Width="280"/>
            <Image Tag="platform" Height="62" Canvas.Left="629" Source="platform.jpg" Stretch="Fill" Canvas.Top="176" Width="182"/>
        </Canvas>

    </Grid>
</Window>